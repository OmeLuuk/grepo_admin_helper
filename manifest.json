{
    "manifest_version": 2,
    "name": "Grepo Admin Helper",
    "version": "1.0",
    "description": "A browser extension to assist Grepolis game admins with various tasks",
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["*://*.grepolis.com/admin*"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/grepoadminhelper16.jpg",
            "48": "icons/grepoadminhelper48.jpg",
            "128": "icons/grepoadminhelper128.jpg"
        }
    },
    "icons": {
        "16": "icons/grepoadminhelper16.jpg",
        "48": "icons/grepoadminhelper48.jpg",
        "128": "icons/grepoadminhelper128.jpg"
    }
}
